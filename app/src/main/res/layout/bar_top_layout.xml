<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uk_top_bar_open_height"
>

    <LinearLayout
        android:id="@+id/uk_black_im"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/uk_top_bar_close_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_dp_20"
        android:paddingRight="@dimen/dimen_dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    >
        <ImageView
            android:id="@+id/uk_tl_back_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_topbar_black_ac"
        />

    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/uk_title_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:paddingRight="@dimen/dimen_dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
    >

        <LinearLayout
            android:id="@+id/ll_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >

            <TextView
                android:id="@+id/uk_title_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="这是大标题"
                android:textColor="#323a3a"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/uk_title_small"
            />

            <TextView
                android:id="@+id/uk_title_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="小标题这里是"
                android:textSize="18sp"
                android:visibility="gone"
                android:textColor="#B4BCBC"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/im_big_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_rename_lock_name"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

        />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ll_test_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="这是大标题"
            android:textColor="#323a3a"
            android:textSize="20sp"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/tv_test_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="小标题这里是"
            android:textColor="#505858"
            android:textSize="14sp"
        />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_operation_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/uk_top_bar_close_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text=""
        android:textColor="#323a3a"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


</android.support.constraint.ConstraintLayout>